<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    tools:context=".WelcomePage">

    <TextView
        android:id="@+id/welcomeEmployee"
        android:layout_width="320dp"
        android:layout_height="64dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="47dp"
        android:text="@string/welcomeMessage"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="220dp"
        android:text="Search for a branch based on:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_button"
        android:onClick="onClick"
        android:text="Sign Out"
        android:textColor="#F1EFF4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnsearchAddress"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/round_button"
        android:onClick="searchAddress"
        android:text="Address"
        android:textColor="#F1EFF4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnsearchWorkingHours"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/round_button"
        android:onClick="searchWorkingHours"
        android:text="Working Hours"
        android:textColor="#F1EFF4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntypeOfServices"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/round_button"
        android:onClick="searchTypeOfServices"
        android:text="Services "
        android:textColor="#F1EFF4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>